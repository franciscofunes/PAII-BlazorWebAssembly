@page "/"

<PageTitle>Dólar Pulse AR - Cotización Dólar</PageTitle>

<div class="bg-blue-400 min-h-screen flex flex-col justify-center items-center text-white">
    <div class="lg:hidden text-center">
        <p class="text-black text-4xl animate-pulse">
            Dolar <span class="text-blue-500 font-semibold">Pulse</span> <span class="fas fa-wave-square font-semibold text-black" aria-hidden="true"></span>
        </p>
    </div>
    <h1 class="text-3xl md:text-5xl lg:text-4xl text-center mb-4" style="animation: pulse 1s cubic-bezier(0.4, 0, 0.6, 1) 1s;">Bienvenidos 😎</h1>
    <p class="text-lg md:text-xl lg:text-2xl text-center mb-6" style="animation: pulse 1s cubic-bezier(0.4, 0, 0.6, 1) 2s;">Consulta la cotización del dólar en Argentina.</p>
    <NavLink
        class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md shadow-lg hover:shadow-xl transition duration-300 ease-in-out"
        style="animation: pulse 1s cubic-bezier(0.4, 0, 0.6, 1) 3s;"
        href="/cotizaciones">
        Consultar Cotización
    </NavLink>
</div>
